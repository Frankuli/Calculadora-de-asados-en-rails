<section class="banner-area relative">
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-center">
            <div class="section-top-border">
                <%= link_to 'Nuevo Articulo', new_article_path %>
                <h3 class="mb-30">Listado de Articulos</h3>
                <div class="progress-table-wrap">
                    <div class="progress-table">
                        <div class="table-head">
                            <div class="visit">Nombre</div>
                            <div class="visit">/</div>
                        </div>
                        <% @articles.each do |article|%>
                            <div class="table-row" >
                                <div class="visit" ><%= article.name %> </div>
                                <div class="visit"> <%= link_to 'Editar', edit_article_path(article) %></div>
                                <div class="visit"> <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


